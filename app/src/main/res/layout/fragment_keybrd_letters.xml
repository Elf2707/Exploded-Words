<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elf.explodedwords.FragmentKeyboard">

    <LinearLayout
        android:id="@+id/layout_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnA"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="А"
            android:onClick="keyPress"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnB"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Б"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnV"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="В"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnG"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Г"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnD"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Д"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnE"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Е"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnEE"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ё"
            android:textColor="@color/clr_main_gradient" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sec_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_first_line"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnJ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ж"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnZ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="З"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnI"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="И"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnII"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
