            android:text="Р"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnS"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
