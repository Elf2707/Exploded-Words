            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnCh"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ч"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnSh"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ш"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnSj"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Щ"
            android:textColor="@color/clr_main_gradient" />

        <Button
            android:id="@+id/btnQ"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ъ"
            android:textColor="@color/clr_main_gradient" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_foth"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnW"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
